.share-dialog
  width 600px

  .share-top-dialog
    padding 30px

  .share-status
    margin 30px
    font-size 32px
    text-align center

    a
      font-size 14px
      margin-left 10px

  .share-button
    button
      modal-button()
      float left
    .share-button-help-not-sharing
      margin-left 175px
      padding-top 10px
    .share-button-help-sharing
      margin-left 210px
      padding-top 10px

  .sharing-tabs
    clear both
    margin 30px 0 5px 0

    li
      list-style none
      margin 0
      display inline
      border 1px solid #000
      border-bottom none
      padding 5px
      cursor pointer
    .sharing-tab-embed
      border-left none
    .sharing-tab-selected
      background-color #ddd
      border-bottom 1px solid #ddd

  .sharing-tab-contents
    clear both
    padding 20px
    height 100px
    background-color #ddd
    border-top 1px solid #000
    border-bottom 1px solid #000

    .copy-link
      margin-left 10px

    .social-icons
      margin-top 10px

      .social-icon
        display: inline-block
        margin-right 7px

        width: 32px
        height: 32px
        border-radius: 50%;

        position: relative;
        overflow: hidden;
        vertical-align: middle;

        .social-container
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
        .social-svg
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          fill-rule: evenodd;

        .social-svg-background,
        .social-svg-icon,
        .social-svg-mask
          transition: fill 170ms ease-in-out;
          fill: transparent;
        .social-svg-mask
          fill: #0f0b0b;

    input
      margin-top 5px
      padding 5px
      width 100%
    textarea
      margin-top 5px
      width 100%
      padding 5px
      height 75px


  .buttons
    clear both
    float right
    margin 10px

    button
      modal-button()
      margin-left 10px
    button.disabled
      background-color #777
