.localFileLoad
  .dropArea
    position relative
    overflow hidden
    border 1px dashed #00
    padding 150px 0
    margin-bottom 10px
    text-align center
    font-size 14px
    color #000
    input
      position absolute
      top 0
      right 0
      margin 0
      padding 0
      left 0
      bottom 0
      opacity 0
  .dropHover
    background-color #FFFBCC

.urlImport
  .urlDropArea
    position relative
    overflow hidden
    border 1px dashed #00
    padding 120px 0
    margin-bottom 10px
    text-align center
    font-size 14px
    color #000
  .dropHover
    background-color #FFFBCC
  input
    margin-bottom 20px
