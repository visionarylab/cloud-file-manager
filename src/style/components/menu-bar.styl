.menu-bar
  font-family: 'Arial', 'Helvetica', 'sans-serif'
  width 100%
  background-color #105262
  padding  8px 0px 8px
  color white
  height menu-bar-height
  box-sizing border-box

  enable-flex(row)

  span, i
    padding-left 0.5em
    padding-right 0.5em
    vertical-align middle
    display inline-block

  .menu-bar-content-filename
    label-font(size: 13px, transform: none)
    display inline-block
    padding-left 5px
    padding-top 1px
    cursor pointer
    vertical-align middle
    no-select()

    input
      border 0
      padding 0
      margin 0
      background #fff
      label-font(size: 13px, transform: none)
      color #000
      width 300px
      outline none

  .menu-bar-file-status-alert
    label-font()
    background-color #f00
    padding 2px 7px
    -webkit-border-radius: 5px
    -moz-border-radius: 5px
    border-radius: 5px
    margin-left 20px

  .menu-bar-file-status-info
    font-style: italic

  .menu-bar-left, .menu-bar-right
    height 100%
    display flex
    align-items center

  .menu-bar-right
    padding-left 0.5em
    padding-right 0.5em

    .menu-hidden, .menu-showing
      right 10px

  span.gdrive-icon
    background url("../img/google-drive-16.png") no-repeat top left
    display inline-block
    width 16px
    height 16px
    padding 0
    position relative
    top 3px

  span.document-store-icon
    background url("../img/document-store-16.png") no-repeat top left
    display inline-block
    width 16px
    height 16px
    padding 0
    position relative
    top 3px

  // Customize default drop-down styles. Language menu is a bit more compact.
  .lang-menu
    &.with-border
      border #aaa 1px solid
      padding-right 5px
    no-select()
    .menu-showing
      min-width 50px

    .lang-option
      padding 0
      .flag
        vertical-align middle
        margin-right 10px
    .lang-label
      padding-right: 0.25em;
      margin-top: -11px
      background-image: url('../img/earth.svg')
      background-repeat: no-repeat;
      padding-left: 21px;
      background-position: 4px 0;
      background-size: 13px;
